<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/dbId"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:layout_marginVertical="15dp"
        android:textAlignment="center"
        android:gravity="center"
        tools:text="Id" />

    <LinearLayout
        android:id="@+id/dbContent"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/dbId"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dbuserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20dp"
            tools:text="Name"


            />

        <TextView
            android:id="@+id/dbuserAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dbuserName"
            android:textColor="@color/black"
            android:textSize="20dp"
            tools:text="Name"


            />

        <TextView
            android:id="@+id/dbPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dbuserAddress"

            android:textColor="@color/black"
            android:textSize="15dp"
            tools:text="Phone"


            />
    </LinearLayout>


    <ImageView
        android:id="@+id/dbDelete"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="13dp"
        android:layout_toEndOf="@id/dbContent"
        android:adjustViewBounds="true"
        android:gravity="center"
        android:scaleType="centerInside" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/dbContent"
        android:layout_marginTop="10dp"
        android:background="#DAD8D8"

        />


</RelativeLayout>